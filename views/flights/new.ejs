<%- include('../partials/html-head')  %> 
<%- include('../partials/nav')  %>

<body>
  <main>
    <h1>Add Flight Below</h1>
    <form id="new-form" action="/flights" method="POST">
      <label for="airline-input">Select Airline:</label>
      <select name="airline" id="airline-input">
        <option value="American">American</option>
        <option value="SouthWest">SouthWest</option>
        <option value="United">United</option>
      </select>
      <label for="airport-input">Select Airport:</label>
      <select name="airport" id="airline-input">
        <option value="DEN">DEN</option>
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
      </select>
      <label for="flightNo-input">Enter Flight Number:</label>
      <input type="number" required name="flightNo" id="flightNo-input" min="10" max="9999">
      <label for="departs-input">Enter Departure Date:</label>
      <input type="datetime-local" name="departs" id="departs-input" value="">
      <button type="submit">Add Flight</button>
    </form>
  </main>
</body>

